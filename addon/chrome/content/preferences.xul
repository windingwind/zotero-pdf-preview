        <row>
          <label value="&zotero.__addonRef__.help.feedback.label;" class="zotero-text-link" href="__homepage__" />
        </row>
        <row>
          <label value="&zotero.__addonRef__.help.version.label;" />
          <label value="&zotero.__addonRef__.help.releasetime.label;" />
        </row>
      </rows>
